---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import BookingForm from '../components/BookingForm';
---

<BaseLayout title="Đặt Lịch Phân Tích - TN Consultant">
  <Header />
  
  <!-- Booking Page Content -->
  <main class="min-h-screen bg-dark pt-24 pb-20">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
      
      <!-- Page Header -->
      <div class="text-center mb-16">
        <span class="inline-block text-xs font-bold text-cream uppercase tracking-[0.3em] mb-4">
          BOOKING
        </span>
        <h1 class="font-serif text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-6">
          Đặt Lịch Phân Tích
        </h1>
        <div class="h-0.5 w-24 bg-gradient-to-r from-cream to-transparent mx-auto mb-6"></div>
        <p class="text-lg text-gray-light max-w-2xl mx-auto leading-relaxed">
          Bắt đầu hành trình khám phá chiến lược cuộc đời của bạn
        </p>
      </div>

      <!-- React Booking Form Component -->
      <BookingForm client:load />

    </div>
  </main>
</BaseLayout>
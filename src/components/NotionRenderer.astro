---
interface Props {
  blocks: any[];
}

const { blocks } = Astro.props;
---

<div class="space-y-4">
  {blocks.map((block) => {
    const type = block.type;
    const content = block[type];
    
    if (!content?.rich_text) return null;
    
    const text = content.rich_text.map((t: any) => t.plain_text).join('');
    
    if (type === 'paragraph') {
      return <p class="text-lg">{text}</p>;
    }
    
    if (type === 'heading_2') {
      return <h2 class="text-3xl font-bold">{text}</h2>;
    }
    
    if (type === 'heading_3') {
      return <h3 class="text-2xl font-bold">{text}</h3>;
    }
    
    return <p>{text}</p>;
  })}
</div>
